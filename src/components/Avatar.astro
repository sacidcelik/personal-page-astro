---
import { Image } from "astro:assets";
import Card from "./Card.astro";
import portrait from "../assets/portrait.webp";
---

<Card
  colSpan="md:col-span-1 md:col-start-2 lg:col-start-3"
  rowSpan="md:row-span-3"
  order="1"
  bgColor="bg-orange-400 dark:bg-orange-700"
  noPadding={true}
  maxHeight="max-h-[400px]"
>
  <Image
    class="object-cover select-none pointer-events-none"
    src={portrait}
    alt="portrait of sacid"
  />
</Card>
