---
import Card from "./Card.astro";
import { Icon } from "astro-icon/components";

interface Now {
  status: NowContent;
  location: NowContent;
  open: NowContent;
}

interface NowContent {
  icon: string;
  description: string;
}

const nowDefinition: Now = {
  status: {
    icon: "line-md--briefcase",
    description: "working as a freelance developer",
  },
  location: {
    icon: "line-md--map-marker",
    description: "located in munich, de",
  },
  open: {
    icon: "line-md--lightbulb",
    description: "open to remote or hybrid projects",
  },
};
---

<Card colSpan="md:col-span-2" rowSpan="md:row-span-2" order="4">
  <h2 class="text-lg font-thin">now</h2>
  <div class="flex flex-col gap-2">
    {
      Object.keys(nowDefinition).map((key) => (
        <div class="flex items-center gap-2">
          <Icon name={nowDefinition[key as keyof Now].icon} class="text-2xl" />
          <span class="text-lg">
            {nowDefinition[key as keyof Now].description}
          </span>
        </div>
      ))
    }
  </div>
</Card>
