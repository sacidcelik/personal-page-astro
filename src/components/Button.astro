---
interface Props {
  label?: string;
}

const { label } = Astro.props;
---

<button
  class="group/button text-xl max-h-[50px] hover:scale-110 drop-shadow-lg border-t-2 border-l-2 border-r-4 border-b-4 active:filter-none active:translate-x-[3px] active:translate-y-[3px] px-5 py-2 active:border border-orange-300 dark:border-orange-700 hover:text-primary-500 transition-colors duration-100 ease-in-out cursor-pointer rounded-lg"
  aria-label={label ?? ""}
>
  <slot />
</button>
